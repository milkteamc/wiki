<style>
.custom-footer {
  margin-top: 2rem;
  padding: 2rem 1rem 1rem;
  border-top: 1px solid var(--sl-color-gray-5);
  background: var(--sl-color-gray-7);
}

.footer-content {
  max-width: 72rem;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.footer-info {
  text-align: center;
}

.footer-main {
  margin: 0 0 0.5rem 0;
  font-size: 0.9rem;
  color: var(--sl-color-white);
}

.footer-links {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  font-size: 0.8rem;
  color: var(--sl-color-gray-2);
}

.footer-links a {
  color: var(--sl-color-accent);
  text-decoration: none;
}

.footer-links a:hover {
  text-decoration: underline;
}

.footer-social {
  display: flex;
  justify-content: center;
  gap: 1rem;
}

.social-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem;
  color: var(--sl-color-gray-2);
  text-decoration: none;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
}

.social-link:hover {
  color: var(--sl-color-white);
  background: var(--sl-color-gray-6);
}

@media (min-width: 50rem) {
  .footer-content {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  
  .footer-info {
    text-align: left;
  }
  
  .footer-links {
    flex-direction: row;
    gap: 1rem;
  }
  
  .footer-links span::after {
    content: "•";
    margin-left: 1rem;
    color: var(--sl-color-gray-3);
  }
  
  .footer-links span:last-child::after {
    content: "";
  }
}
</style>